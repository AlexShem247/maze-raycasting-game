    // Create Items
    Coin topLeftCoin1 = new Coin(screen, 237, 60);

    Coin topRightCoin1 = new Coin(screen, 865, 103);

    Coin leftCoin1 = new Coin(screen, 151, 248);
    Coin leftCoin2 = new Coin(screen, 64, 295);
    Coin leftCoin3 = new Coin(screen, 124, 339);
    Coin leftCoin4 = new Coin(screen, 84, 385);
    Coin leftCoin5 = new Coin(screen, 118, 441);

    Coin centreCoin1 = new Coin(screen, 482, 250);

    Coin rightCoin1 = new Coin(screen, 730, 389);

    Coin bottomLeftCoin1 = new Coin(screen, 273, 571);
    Coin bottomLeftCoin2 = new Coin(screen, 61, 674);

    Coin bottomCoin1 = new Coin(screen, 522, 502);

    items = new Item[]{topLeftCoin1, topRightCoin1, leftCoin1, leftCoin2, leftCoin3, leftCoin4,
        leftCoin5, centreCoin1, rightCoin1, bottomLeftCoin1, bottomLeftCoin2, bottomCoin1};
  }

  public Border[] getShapes() {
    return shapes;
  }

  public Enemy[] getEnemies() {
    return enemies;
  }

  public Item[] getItems() {
    return items;
  }
}
